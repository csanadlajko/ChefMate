<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChefMate_YR6LYT.AddRecipePage"
             Title="AddRecipePage"
             xmlns:local="clr-namespace:ChefMate_YR6LYT"
             x:DataType="local:AddRecipePageViewModel">
   
    <VerticalStackLayout>
        <Label 
            Text="This is the add recipe page!!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label 
            Text="New recipe name"/>
        <Entry 
            Placeholder="Recipe name"
            Text="{Binding DraftRecipe.Name}"/>
        <Label
            Text="New recipe's description"/>
        <Entry 
            Placeholder="Recipe description"
            Text="{Binding DraftRecipe.Description}"/>
        <Label 
            Text="Preparation time in minutes"/>
        <Entry 
            Placeholder="Preparation time"
            Text="{Binding DraftRecipe.PreparationTimeMinutes}"/>
        <Label 
            Text="Difficulty (can be numeric or string)" />
        <Entry 
            Placeholder="Difficulty"
            Text="{Binding DraftRecipe.Difficulty}"/>

        <Label Text="List ingredients" />

        <Label 
            Text="Ingredient name: "/>
        <Entry 
            Placeholder="Name of ingredient"
            Text="{Binding DraftIngredients.Name}"/>
        <Label 
            Text="Ingredient description"/>
        <Entry 
            Placeholder="Ingredient's short description"
            Text="{Binding DraftIngredients.Description}"/>
        <Label
            Text="Quantity of ingredient"/>
        <Entry 
            Placeholder="Quantity of ingredient"
            Text="{Binding DraftIngredients.Quantity}"/>

        <Button
            Text="Cancel"
            BackgroundColor="Red"
            Command="{Binding CancelAddCommand}"/>

        <Button 
            Text="Add recipe"
            BackgroundColor="Green"
            Command="{Binding AddRecipeCommand}"/>


    </VerticalStackLayout>
</ContentPage>